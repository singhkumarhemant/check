<br>
<form id="formId"></form>
<center>
  <select id="enquiry_id" name="hks" class="mynewclass">
    <option>select value</option>
    {{#each enquiryModels}}
    <option value="{{enquiryId}}">{{enquiryId}}</option>
    {{/each}}
  </select>
</center>
<br><br>
<div class="row search-box">
  <input type="text" name="search_name" id="name_input" list="huge_list">
</div>
</form>
<br>
<div class="clearfix"></div>
<script>
  var selectedEnq;
  document.getElementById('enquiry_id').addEventListener('change', function (event) {
    selectedEnq = event.target.value;
  });

  window.addEventListener("load", function () {
    var name_input = document.getElementById('name_input');
    name_input.addEventListener("keyup", function (event) {
      if (event.target.value.length >= 3 && selectedEnq) {
        var url = "/enquiryModels/search?item=" + event.target.value + "&enqId=" + selectedEnq;
        $.get(url, function (data) {
          $('#enquiry-table').html(data);
        });
      }
    });
  });
</script>

<div id="enquiry-table"></div>